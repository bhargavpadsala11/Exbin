<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.AddCategoriesFragment">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/app_bar"
            layout="@layout/custom_app_bar" />

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:strokeWidth="5dp"
            app:layout_constraintStart_toStartOf="@+id/addCategorytxt"
            app:layout_constraintEnd_toEndOf="@+id/addCategorytxt"
            app:layout_constraintTop_toTopOf="@+id/addCategorytxt"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
        app:layout_constraintBottom_toBottomOf="@+id/addCategorytxt" />



        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_Category_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:hint="Enter new catagory name"
            android:textSize="22sp"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toStartOf="@+id/addCategorytxt"
            app:layout_constraintEnd_toEndOf="@+id/addCategorytxt"
            app:layout_constraintBottom_toTopOf="@id/addCategorytxt" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/addCategorytxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:hint="Name"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/app_bar"
            app:layout_constraintBottom_toTopOf="@id/selectIcon"
            android:importantForAutofill="no"
            android:padding="20dp" />

        <TextView
            android:id="@+id/tv_selected_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Icon"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginBottom="20dp"
            app:layout_constraintStart_toStartOf="@id/selectIcon"
            app:layout_constraintEnd_toEndOf="@id/selectIcon"
            app:layout_constraintBottom_toTopOf="@id/selectIcon" />

        <TextView
            android:id="@+id/tv_selected_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Color"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/color_card"
            app:layout_constraintEnd_toEndOf="@+id/color_card"
            app:layout_constraintBottom_toBottomOf="@+id/tv_selected_icon"
            app:layout_constraintTop_toTopOf="@+id/tv_selected_icon" />


        <ImageView
            android:id="@+id/selectIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="14dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_home" />


        <ImageView
            android:id="@+id/arrow1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="@+id/selectIcon"
            app:layout_constraintTop_toTopOf="@+id/selectIcon"
            app:layout_constraintStart_toEndOf="@+id/selectIcon"
            app:srcCompat="@drawable/ic_next" />


        <View
            android:id="@+id/divider"
            android:layout_width="3dp"
            android:layout_height="80dp"
            app:layout_constraintStart_toEndOf="@+id/arrow1"
            app:layout_constraintTop_toTopOf="@+id/arrow1"
            app:layout_constraintBottom_toBottomOf="@+id/arrow1"
            android:background="?android:attr/listDivider" />

        <androidx.cardview.widget.CardView
            android:id="@+id/color_card"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="@+id/divider"
            app:layout_constraintBottom_toBottomOf="@+id/divider"
            app:layout_constraintStart_toEndOf="@+id/divider"
            app:layout_constraintEnd_toStartOf="@+id/arrow2"
            app:cardCornerRadius="50dp">

            <ImageView
                android:id="@+id/selectColor"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:importantForAccessibility="no"
                app:srcCompat="@color/purple_500" />
        </androidx.cardview.widget.CardView>


        <ImageView
            android:id="@+id/arrow2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="@+id/color_card"
            app:layout_constraintTop_toTopOf="@+id/color_card"
            app:layout_constraintEnd_toStartOf="@+id/divider1"
            app:srcCompat="@drawable/ic_next" />


        <View
            android:id="@+id/divider1"
            android:layout_width="3dp"
            android:layout_height="80dp"
            android:layout_margin="14dp"
            app:layout_constraintEnd_toStartOf="@+id/ic_card"
            app:layout_constraintTop_toTopOf="@+id/arrow2"
            app:layout_constraintBottom_toBottomOf="@+id/arrow2"
            android:background="?android:attr/listDivider" />




        <androidx.cardview.widget.CardView
            android:id="@+id/ic_card"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="18dp"
            app:layout_constraintTop_toTopOf="@+id/divider1"
            app:layout_constraintBottom_toBottomOf="@+id/divider1"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="50dp">

            <ImageView
                android:id="@+id/mergedImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:importantForAccessibility="no"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_home"
                app:srcCompat="@color/purple_500" />
        </androidx.cardview.widget.CardView>


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            app:backgroundTint="@color/main_color"
            app:tint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_save_24" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/colorItemCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/colorRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            tools:listitem="@layout/color_item" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/iconRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            tools:listitem="@layout/icon_item" />

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>